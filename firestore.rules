rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check strict ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // TASADORPRO ARTIFACTS
    // Strict isolation: Users can only read/write their own data
    
    match /artifacts/tasadorpro/users/{userId} {
      match /data/{document=**} {
        allow read, write: if isOwner(userId);
      }
      match /comparables/{document=**} {
        allow read, write: if isOwner(userId);
      }
      match /saved_valuations/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Block everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
